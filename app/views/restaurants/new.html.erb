<h1 class="text-center">Create a new restaurant</h1>

<div class="container text-center">
  <div class="row">
    <div class="col">
      <%= simple_form_for [ @restaurant ] do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
